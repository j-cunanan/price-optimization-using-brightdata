# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Dashboard Configuration
# PORT=8000
# HOST=0.0.0.0

# Request settings
REQUEST_DELAY=1.0
MAX_CONCURRENT_REQUESTS=5
TIMEOUT=30
MAX_RETRIES=3

# User agent rotation
ROTATE_USER_AGENTS=true

# Output settings
DEFAULT_OUTPUT_FORMAT=csv
SAVE_IMAGES=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=scraper.log

# Price alert settings (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=
EMAIL_PASS=
ALERT_EMAIL=

# Browser settings (for Selenium when needed)
HEADLESS_BROWSER=true
BROWSER=chrome

# Data storage
DATA_DIR=./data
CACHE_ENABLED=true
CACHE_DURATION=3600

# Bright Data API settings
# Get credentials from: https://brightdata.com/
BRIGHT_DATA_USERNAME=your_bright_data_username
BRIGHT_DATA_PASSWORD=your_bright_data_password
BRIGHT_DATA_ZONE=datacenter
BRIGHT_DATA_SESSION_ID=session123
